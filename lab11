    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        
        Configuration cfg=new Configuration();  
		cfg.configure("hibernate.cfg_1.xml");//populates the data of the configuration file  
		//creating seession factory object  
		StandardServiceRegistry serviceRegistry = new StandardServiceRegistryBuilder().applySettings(cfg.getProperties()). build();
		SessionFactory factory=cfg.buildSessionFactory(serviceRegistry);
		//creating session object  
		Session session=factory.openSession();  
			//creating transaction object  
			Transaction t=session.beginTransaction();  
			Coursesgrade e1;  
        e1 = new Coursesgrade();
                        e1.setcourse_name(jTextField1.getText());  
			e1.setcourse_teacher (jTextField2.getText());  
			session.persist(e1);//persisting the object  
			t.commit();//transaction is commited  
		session.close();  
    }                                        

    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        
        AnnotationConfiguration config = new AnnotationConfiguration();
  config.addAnnotatedClass(Coursesgrade.class);
  SessionFactory factory= config.configure().buildSessionFactory();
  Session session = factory.getCurrentSession();
  Transaction t=session.beginTransaction();/*lets hope an id of 1 exists!*/
  String queryString = "from CoursesGrade where course_name = :course";
        org.hibernate.Query query = session.createQuery(queryString);
  query.setString("course_teacher", jTextField2.getText());
  Object queryResult = query.uniqueResult();
  t.commit();//transaction is commited  
		session.close();
  
    }                                        

    private void jButton3ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
         AnnotationConfiguration config = new AnnotationConfiguration();
  config.addAnnotatedClass(Coursesgrade.class);
  SessionFactory factory= config.configure().buildSessionFactory();
  Session session = factory.getCurrentSession();
  Transaction t=session.beginTransaction();/*lets hope an id of 1 exists!*/
  String queryString = "delete course_name = :course from CoursesGrade  ";
        org.hibernate.Query query = session.createQuery(queryString);
       t.commit();//transaction is commited  
		session.close();
    }                                        

